{
  "openapi": "3.1.0",
  "info": { "title": "Debate Analytics API", "version": "1.0.0" },
  "paths": {
    "/ingest/get-presigned-post": {
      "post": {
        "tags": ["Ingestion"],
        "summary": "Get Presigned Post",
        "description": "[POST] Returns a presigned URL and creates the initial Mongodb record.",
        "operationId": "get_presigned_post_ingest_get_presigned_post_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/S3PostRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/S3PostResponse" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/ingest/process": {
      "post": {
        "tags": ["Ingestion"],
        "summary": "Start Processing",
