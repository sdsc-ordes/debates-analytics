    "/search/search-solr": {
      "get": {
        "tags": ["Search"],
        "summary": "Search Solr",
        "operationId": "search_solr_search_search_solr_get",
        "parameters": [
          {
            "name": "queryTerm",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [{ "type": "string" }, { "type": "null" }],
              "description": "The main search string",
              "title": "Queryterm"
            },
            "description": "The main search string"
          },
          {
            "name": "facetFilters",
            "in": "query",
            "required": false,
            "schema": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of filters in 'field:value' format",
              "default": [],
              "title": "Facetfilters"
            },
            "description": "List of filters in 'field:value' format"
          },
          {
            "name": "facetFields",
            "in": "query",
            "required": false,
            "schema": {
              "type": "array",
              "items": { "type": "string" },
              "default": [
                "debate_date",
                "debate_timeslot",
                "statement_type",
                "debate_session",
                "speaker_name",
                "speaker_role_tag",
                "speaker_country"
              ],
              "title": "Facetfields"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "required": false,
            "schema": {
              "anyOf": [{ "type": "string" }, { "type": "null" }],
              "title": "Sortby"
            }
          },
          {
            "name": "rows",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "maximum": 100,
              "minimum": 1,
              "default": 10,
              "title": "Rows"
            }
          },
          {
            "name": "start",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0,
              "title": "Start"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SearchResponse" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/admin/list": {
      "get": {
        "tags": ["Admin"],
        "summary": "List Media",
        "description": "Returns a list of all uploaded media for the dashboard.",
        "operationId": "list_media_admin_list_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MediaListResponse" }
              }
            }
          }
        }
      }
    },
    "/admin/delete": {
      "post": {
        "tags": ["Admin"],
        "summary": "Delete Media",
        "description": "Nuclear Option: Deletes EVERYTHING.\nUses 'Best Effort' strategy: if one service fails, it logs the error\nbut continues trying to delete the others.",
        "operationId": "delete_media_admin_delete_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DeleteMediaRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/DeleteMediaResponse" }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    },
    "/admin/reindex": {
      "post": {
        "tags": ["Admin"],
        "summary": "Reindex Media",
        "description": "Triggers the Solr Indexing process manually.\nUseful if you changed the Solr schema or parser logic.",
        "operationId": "reindex_media_admin_reindex_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ReindexMediaRequest" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReindexMediaResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HTTPValidationError" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DebateDocument": {
        "properties": {
          "session": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Session"
          },
          "debate_type": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Debate Type"
          },
          "timeslot": {
            "anyOf": [
              { "$ref": "#/components/schemas/Timeslot" },
              { "type": "null" }
            ]
          },
          "date": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Date"
          },
          "link_agenda": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Link Agenda"
          },
          "link_mediasource": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Link Mediasource"
          },
          "media_id": { "type": "string", "title": "Media Id" },
          "s3_key": { "type": "string", "title": "S3 Key" },
          "original_filename": {
            "type": "string",
            "title": "Original Filename"
          },
          "media_type": { "$ref": "#/components/schemas/MediaType" },
          "status": { "type": "string", "title": "Status" },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At"
          },
          "job_id": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Job Id"
          },
          "s3_audio_key": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "S3 Audio Key"
          },
          "transcript_s3_keys": {
            "additionalProperties": { "type": "string" },
            "type": "object",
            "title": "Transcript S3 Keys",
            "default": {}
          },
          "updated_at": {
            "anyOf": [
              { "type": "string", "format": "date-time" },
              { "type": "null" }
            ],
            "title": "Updated At"
          },
          "error_message": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Error Message"
          },
          "name": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Name"
          }
        },
        "type": "object",
        "required": [
          "media_id",
          "s3_key",
          "original_filename",
          "media_type",
          "status",
          "created_at"
        ],
        "title": "DebateDocument"
      },
      "DeleteMediaRequest": {
        "properties": { "mediaId": { "type": "string", "title": "Mediaid" } },
        "type": "object",
        "required": ["mediaId"],
        "title": "DeleteMediaRequest"
      },
      "DeleteMediaResponse": {
        "properties": {
          "status": { "type": "string", "title": "Status" },
          "mediaId": { "type": "string", "title": "Mediaid" },
          "warnings": {
            "anyOf": [
              { "items": { "type": "string" }, "type": "array" },
              { "type": "null" }
            ],
            "title": "Warnings"
          },
          "errors": {
            "anyOf": [
              { "items": { "type": "string" }, "type": "array" },
              { "type": "null" }
            ],
            "title": "Errors"
          }
        },
        "type": "object",
        "required": ["status", "mediaId"],
        "title": "DeleteMediaResponse"
      },
      "FacetField": {
        "properties": {
          "field_name": { "type": "string", "title": "Field Name" },
          "values": {
            "items": { "$ref": "#/components/schemas/FacetValue" },
            "type": "array",
            "title": "Values"
          }
        },
        "type": "object",
        "required": ["field_name", "values"],
        "title": "FacetField"
      },
      "FacetValue": {
        "properties": {
          "label": { "type": "string", "title": "Label" },
          "count": { "type": "integer", "title": "Count" }
        },
        "type": "object",
        "required": ["label", "count"],
        "title": "FacetValue"
      },
      "FileType": {
        "type": "string",
        "enum": ["video/mp4", "audio/wav"],
        "title": "FileType"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": { "$ref": "#/components/schemas/ValidationError" },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "HighlightedDoc": {
        "properties": {
          "statement": {
            "anyOf": [
              { "items": { "type": "string" }, "type": "array" },
              { "type": "null" }
            ],
            "title": "Statement"
          }
        },
        "type": "object",
        "title": "HighlightedDoc"
      },
      "MediaListItem": {
        "properties": {
          "media_id": { "type": "string", "title": "Media Id" },
          "filename": { "type": "string", "title": "Filename" },
          "status": { "type": "string", "title": "Status" },
          "error_message": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Error Message"
          },
          "processing_history": {
            "anyOf": [
              {
                "items": { "$ref": "#/components/schemas/ProcessingStep" },
                "type": "array"
              },
              { "type": "null" }
            ],
            "title": "Processing History"
          },
          "created_at": {
            "anyOf": [
              { "type": "string", "format": "date-time" },
              { "type": "null" }
            ],
            "title": "Created At"
          },
          "title": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Title"
          }
        },
        "type": "object",
        "required": ["media_id", "filename", "status"],
        "title": "MediaListItem"
      },
      "MediaListResponse": {
        "properties": {
          "items": {
            "items": { "$ref": "#/components/schemas/MediaListItem" },
            "type": "array",
            "title": "Items"
          },
          "total": { "type": "integer", "title": "Total" }
        },
        "type": "object",
        "required": ["items", "total"],
        "title": "MediaListResponse"
      },
      "MediaType": {
        "type": "string",
        "enum": ["video", "audio"],
        "title": "MediaType"
      },
      "MetadataResponse": {
        "properties": {
          "debate": { "$ref": "#/components/schemas/DebateDocument" },
          "speakers": {
            "items": { "$ref": "#/components/schemas/Speaker" },
            "type": "array",
            "title": "Speakers",
            "default": []
          },
          "segments": {
            "items": { "$ref": "#/components/schemas/Segment" },
            "type": "array",
            "title": "Segments",
            "default": []
          }
        },
        "type": "object",
        "required": ["debate"],
        "title": "MetadataResponse"
      },
      "ProcessRequest": {
        "properties": {
          "s3_key": {
            "type": "string",
            "title": "S3 Key",
            "description": "The final S3 key where the file will be stored"
          },
          "media_id": {
            "type": "string",
            "title": "Media Id",
            "description": "The unique job ID generated by the backend"
          },
          "title": {
            "type": "string",
            "title": "Title",
            "description": "filename of the media"
          },
          "file_type": { "$ref": "#/components/schemas/FileType" }
        },
        "type": "object",
        "required": ["s3_key", "media_id", "file_type"],
        "title": "ProcessRequest"
      },
      "ProcessingStep": {
        "properties": {
          "step": { "type": "string", "title": "Step" },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "title": "Timestamp"
          }
        },
        "type": "object",
        "required": ["step", "timestamp"],
        "title": "ProcessingStep"
      },
      "ReindexMediaRequest": {
        "properties": { "mediaId": { "type": "string", "title": "Mediaid" } },
        "type": "object",
        "required": ["mediaId"],
        "title": "ReindexMediaRequest"
      },
      "ReindexMediaResponse": {
        "properties": {
          "status": { "type": "string", "title": "Status" },
          "mediaId": { "type": "string", "title": "Mediaid" },
          "warnings": {
            "anyOf": [
              { "items": { "type": "string" }, "type": "array" },
              { "type": "null" }
            ],
            "title": "Warnings"
          },
          "errors": {
            "anyOf": [
              { "items": { "type": "string" }, "type": "array" },
              { "type": "null" }
            ],
            "title": "Errors"
          }
        },
        "type": "object",
        "required": ["status", "mediaId"],
        "title": "ReindexMediaResponse"
      },
      "S3MediaUrlResponse": {
        "properties": {
          "signedUrls": {
            "items": { "$ref": "#/components/schemas/S3MediaUrls" },
            "type": "array",
            "title": "Signedurls",
            "description": "List of presigned URLs"
          },
          "signedMediaUrl": {
            "type": "string",
            "title": "Signedmediaurl",
            "description": "Presigned URL for video or audio file"
          }
        },
        "type": "object",
        "required": ["signedUrls"],
        "title": "S3MediaUrlResponse"
      },
      "S3MediaUrls": {
        "properties": {
          "url": { "type": "string", "title": "Url", "description": "Url" },
          "label": {
            "type": "string",
            "title": "Label",
            "description": "Label for Url"
          }
        },
        "type": "object",
        "required": ["url", "label"],
        "title": "S3MediaUrls"
      },
      "S3PostRequest": {
        "properties": {
          "filename": {
            "type": "string",
            "title": "Filename",
            "description": "Original filename with extension (e.g., my_video.mp4)"
          }
        },
        "type": "object",
        "required": ["filename"],
        "title": "S3PostRequest"
      },
      "S3PostResponse": {
        "properties": {
          "postUrl": {
            "type": "string",
            "title": "Posturl",
            "description": "The S3 endpoint URL to POST the file to"
          },
          "fields": {
            "additionalProperties": { "type": "string" },
            "type": "object",
            "title": "Fields",
            "description": "Key-value fields required in the multipart form data"
          },
          "mediaId": {
            "type": "string",
            "title": "Mediaid",
            "description": "The unique media ID generated by the backend"
          },
          "s3Key": {
            "type": "string",
            "title": "S3Key",
            "description": "The final S3 key where the file will be stored"
          }
        },
        "type": "object",
        "required": ["postUrl", "fields", "mediaId", "s3Key"],
        "title": "S3PostResponse"
      },
      "SearchDocument": {
        "properties": {
          "id": { "type": "string", "title": "Id" },
          "media_id": { "type": "string", "title": "Media Id" },
          "segment_nr": { "type": "integer", "title": "Segment Nr" },
          "speaker_id": { "type": "string", "title": "Speaker Id" },
          "statement": {
            "items": { "type": "string" },
            "type": "array",
            "title": "Statement"
          },
          "statement_type": { "$ref": "#/components/schemas/StatementType" },
          "start": { "type": "number", "title": "Start" },
          "end": { "type": "number", "title": "End" },
          "debate_date": {
            "anyOf": [
              { "type": "string", "format": "date-time" },
              { "type": "null" }
            ],
            "title": "Debate Date"
          },
          "debate_type": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Debate Type"
          },
          "debate_session": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Debate Session"
          },
          "statement_language": {
            "anyOf": [{ "type": "string" }, { "type": "null" }],
            "title": "Statement Language"
          }
        },
        "type": "object",
        "required": [
          "id",
          "media_id",
          "segment_nr",
          "speaker_id",
          "statement",
          "statement_type",
          "start",
          "end"
        ],
        "title": "SearchDocument"
      },
      "SearchResponse": {
        "properties": {
          "docs": {
            "items": { "$ref": "#/components/schemas/SearchDocument" },
            "type": "array",
            "title": "Docs"
          },
